{
  "manifest_version": 3,
  "name": "News Poster for X",
  "version": "1.0",
  "description": "Generate customizable news posts for X using ChatGPT API with a hotkey.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "https://gnews.io/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "generate-post": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      },
      "description": "Generate a news post and populate it in the X composer."
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}